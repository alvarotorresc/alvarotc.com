---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getVisibleProjects } from '../data/projects';

const allProjects = getVisibleProjects();
---

<BaseLayout title="Projects">
  <div class="min-h-screen max-w-2xl mx-auto px-6 py-16">
    <!-- Back link -->
    <a
      href="/"
      class="inline-block text-sm text-text-muted hover:text-accent transition-colors mb-12"
    >
      &larr; Back
    </a>

    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-2xl font-medium mb-2">Projects</h1>
      <p class="text-text-muted text-sm">All projects</p>
    </header>

    <!-- Projects -->
    <div class="space-y-3">
      {allProjects.map((project) => <ProjectCard project={project} lang="en" />)}
    </div>
  </div>
</BaseLayout>

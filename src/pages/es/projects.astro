---
import BaseLayout from '../../layouts/BaseLayout.astro';

const allProjects = [
  {
    name: 'Quedamos',
    description: 'Social app para organizar planes con amigos',
    url: 'https://github.com/alvarotorresc/quedamos-app',
  },
  {
    name: 'Sin Herencia',
    description: 'Blog político semanal con análisis generacional',
    url: 'https://sinherencia.com',
  },
  {
    name: 'Guitar App',
    description: 'Herramientas para guitarristas con Web Audio API',
    url: '#',
  },
  {
    name: 'PokeUtils',
    description: 'Utilidades Pokémon con vanilla JavaScript',
    url: 'https://pokemon-type-chart.netlify.app',
  },
  {
    name: 'DevTools Suite',
    description: 'UUID generator, hash calculator, JWT decoder y más',
    url: '#',
  },
  {
    name: 'Finance Tracker',
    description: 'Gestión de finanzas personales self-hosted',
    url: '#',
  },
  {
    name: 'Clipboard Manager',
    description: 'Clipboard compartido en red local',
    url: '#',
  },
  {
    name: 'Price Tracker',
    description: 'Seguimiento de precios de supermercados',
    url: '#',
  },
  {
    name: 'Swiss Knife',
    description: 'Randomizador, ruleta, amigo invisible y más utilidades',
    url: '#',
  },
  {
    name: 'System Config',
    description: 'Configuración Linux portable entre máquinas',
    url: '#',
  },
];
---

<BaseLayout title="Proyectos">
  <div class="min-h-screen max-w-2xl mx-auto px-6 py-16">
    <!-- Back link -->
    <a
      href="/es"
      class="inline-block text-sm text-text-muted hover:text-accent transition-colors mb-12"
    >
      ← Volver
    </a>

    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-2xl font-medium mb-2">Proyectos</h1>
      <p class="text-text-muted text-sm">Todos los proyectos</p>
    </header>

    <!-- Projects -->
    <div class="space-y-3">
      {
        allProjects.map((project) => (
          <div class="border-l-2 border-border pl-4 glow-border">
            <a
              href={project.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group block py-1"
            >
              <h3 class="font-medium group-hover:text-accent transition-colors">{project.name}</h3>
              <p class="text-sm text-text-muted">{project.description}</p>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</BaseLayout>
